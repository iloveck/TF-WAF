{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "paths": {
      "@core/*": [ "src/app/core/*" ],
      "@model/*": [ "src/app/core/model/*" ],
      "@appinitialzer/*": [ "src/app/core/app-initializer/*" ],
      "@exceptionhandling/*": [ "src/app/core/exception-handling/*" ],
      "@service/*": [ "src/app/core/service/*" ],
      "@common/*": [ "src/app/core/common/*" ],
      "@httpinterceptor/*": [ "src/app/core/http-interceptor/*" ],
      "@cache/*": [ "src/app/core/cache/*" ],
      "@environments/*": [ "environments/*" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
